{
	"name": "versioning_changelog_tut",
	"version": "1.0.1",
	"main": "index.js",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@release-it/conventional-changelog": "^8.0.1",
		"husky": "^9.0.11",
		"release-it": "^17.1.1"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release v${version}"
		},
		"github": {
			"release": true
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						}
					]
				}
			}
		}
	},
	"scripts": {
		"prepare": "husky",
		"release": "release-it"
	}
}
